<h1>Create a new Todo </h1>
<!--@ todo is on the controller and need to have a model  -->
<% if @todo.errors.any? %>
  <h2>The Following errors</h2>
  <ul>
    <% @todo.errors.full_messages.each do |msg| %>
    <li><%=msg%></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @todo do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>

  <p>
    <!--button goes straight to the controller of the view TODO. looking for create action. Not there   -->
    <%= f.submit %>
  </p>

<% end %>
<%= link_to "Back to todo Listing", todos_path%>
